{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"outDir": "./dist",
		"declaration": true,
		"declarationDir": "./dist/types",
		"emitDeclarationOnly": false,
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ES6",
		"jsx": "react-jsx",
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"declarationMap": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
